{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES2016",
        "moduleResolution": "NodeNext",
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./lib/esm",
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "src/**/*"
    ]
}